{
  "name": "ovos",
  "version": "0.13.3",
  "description": "A library for animations based on scroll and touch events.",
  "main": "dist/ovos.min.js",
  "types": "types/ovos.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "webpack",
    "bundle": "webpack --env bundle",
    "start": "webpack --env development --env bundle",
    "dev": "npm start -w",
    "tsc": "tsc",
    "test": "jest --env=jsdom",
    "lint": "eslint src/**/*.{js,ts,tsx} --fix",
    "test:watch": "jest --watch --watchAll",
    "duplicated": "jscpd ./src/**/*.ts",
    "verify": "npm run tsc && npm run lint && npm run test && npm start && npm run build && npm run bundle",
    "surge": "surge",
    "deploy": "npm run verify && npm publish && npm run surge:deploy",
    "surge:deploy": "surge -p ./samples -d ovos.surge.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jomarcardoso/ovos.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jomarcardoso/ovo/issues"
  },
  "homepage": "https://github.com/jomarcardoso/ovo#readme",
  "dependencies": {
    "@babel/runtime": "^7.23.9",
    "@types/jsdom-global": "^3.0.7",
    "canvas": "^2.11.2",
    "lodash": "^4.17.21",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@types/jest": "^27.5.2",
    "@types/lodash": "^4.14.202",
    "@types/webpack": "^5.28.5",
    "babel-loader": "^8.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "eslint-webpack-plugin": "^3.2.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jscpd": "^3.5.10",
    "jscpd-badge-reporter": "^1.1.3",
    "mini-css-extract-plugin": "^2.8.0",
    "prettier": "^2.8.8",
    "sanitize.css": "^13.0.0",
    "sass": "^1.71.1",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.4",
    "surge": "^0.23.1",
    "ts-jest": "^28.0.8",
